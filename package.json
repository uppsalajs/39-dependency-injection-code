{
	"name": "@utily/library-template",
	"version": "0.0.18",
	"description": "Template library for Typescript.",
	"author": "Utily Contributors",
	"license": "MIT",
	"repository": "https://github.com/utily/library-template",
	"bugs": {
		"url": "https://github.com/utily/library-template/issues"
	},
	"homepage": "https://github.com/utily",
	"private": false,
	"type": "module",
	"module": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"exports": {
		".": {
			"import": {
				"types": "./dist/index.d.ts",
				"default": "./dist/index.js"
			}
		}
	},
	"git": {
		"tagName": "v${version}"
	},
	"github": {
		"release": true
	},
	"scripts": {
		"lint": "eslint --max-warnings=0 '**/*.{ts,tsx}'",
		"fix": "eslint '**/*.{ts,tsx}' --fix",
		"build": "rimraf dist/* && tsc -p tsconfig.mjs.json",
		"test": "vitest --run",
		"coverage": "vitest --coverage",
		"prepare": "npm run build",
		"clean": "rimraf dist node_modules coverage",
		"verify": "npm run build && npm run test && npm run lint && npm audit"
	},
	"devDependencies": {
		"@tsconfig/node20": "^20.1.5",
		"@tsconfig/strictest": "^2.0.5",
		"@types/node": "^22.10.2",
		"@typescript-eslint/eslint-plugin": "8.18.1",
		"@typescript-eslint/parser": "8.18.1",
		"@vitest/coverage-v8": "^3.2.4",
		"eslint": "^8.56.0",
		"eslint-plugin-prettierx": "github:utily/eslint-plugin-prettierx#utily-20231004",
		"eslint-plugin-simple-import-sort": "^12.1.1",
		"prettierx": "github:utily/prettierx#utily-20231004",
		"rimraf": "^6.0.1",
		"typescript": "5.7.2",
		"vitest": "^3.2.4"
	},
	"dependencies": {
		"isly": "^1.3.0",
		"isoly": "^3.1.1"
	}
}
